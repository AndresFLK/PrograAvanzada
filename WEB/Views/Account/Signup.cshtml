@using Domain.Account;
@model AccountViewModel

<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label">Email </label>
            <input id="email" asp-for="@Model.Email" type="email" class="form-control" aria-describedby="EmailHelp" />
            <span asp-validation-for="@Model.Email"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Password" class="form-label">Password</label>
            <input id="password" asp-for="@Model.Password" type="password" class="form-control" aria-describedby="PasswordHelp" />
            <span asp-validation-for="@Model.Password"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Sign Up</button>
        </div>
        
    </form>
</div>


